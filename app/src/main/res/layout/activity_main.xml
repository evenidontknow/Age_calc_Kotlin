    <android.support.constraint.ConstraintLayout

            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">





        <TextView
                android:layout_width="239dp"
                android:layout_height="116dp"
                android:text="Your Age:"
                android:id="@+id/showtext"
                android:textColor="#000"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/findage"
                app:layout_constraintHorizontal_bias="0.506" app:layout_constraintVertical_bias="0.009"
                android:textSize="20sp" android:textFontWeight="200"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextyear"
            android:hint="enter DOY" android:layout_marginTop="68dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434"
    />
    <Button
            android:text="Get Age"
            android:layout_width="115dp"
            android:layout_height="62dp"
            android:id="@+id/findage" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.725"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextday"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.061" android:backgroundTint="#eaca48" android:background="#eaca48"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextMonth"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/editTextyear"
            android:hint="Enter DOM"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.434" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.037"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editTextday"
            android:hint="DOD" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextMonth"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:layout_constraintHorizontal_bias="0.434"/>


    </android.support.constraint.ConstraintLayout>
